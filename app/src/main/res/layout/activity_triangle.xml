<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond"
    android:scaleType="fitXY">

    <!-- Bouton Pause (haut à gauche) -->
    <com.example.testjeux.PauseButton
        android:id="@+id/pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:foreground="@drawable/pause"
        android:scaleX="1.4" />

    <!-- Bouton Paramètres (haut à droite) -->
    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="⚙" />

    <!-- Zone de jeu (en dessous des boutons) -->
    <com.example.testjeux.TriangleView
        android:id="@+id/triangleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pauseButton" />
</RelativeLayout>
